.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__name
        = current_user.name
      .side-header__box__menu
        = link_to new_group_path, class: "edit-icon" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user.id), class: "cog-icon" do
          = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          %p.group__name
            = group.name
          %p.group__message
            まだメッセージがありません